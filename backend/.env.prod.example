# Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# Database (Use RDS endpoint in production)
DATABASE_URL=postgresql://username:password@rds-endpoint:5432/indostar_naturals
TEST_DATABASE_URL=postgresql://username:password@rds-endpoint:5432/indostar_naturals_test

# Redis (Use ElastiCache endpoint in production)
REDIS_URL=redis://:password@elasticache-endpoint:6379/0
REDIS_PASSWORD=your-strong-redis-password

# PostgreSQL credentials (for docker-compose)
POSTGRES_USER=indostar_user
POSTGRES_PASSWORD=your-strong-postgres-password
POSTGRES_DB=indostar_naturals

# JWT - MUST CHANGE IN PRODUCTION
JWT_SECRET_KEY=your-very-strong-secret-key-min-32-chars-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Razorpay
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-live-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# SMS Provider (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Provider (SendGrid)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@indostarnaturals.com
SENDGRID_FROM_NAME=IndoStar Naturals

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=xxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=https://indostarnaturals.com/auth/google/callback

# S3 Storage (Use CloudFront CDN URL)
S3_BUCKET_NAME=indostar-naturals-media-prod
S3_ACCESS_KEY=AKIAXXXXXXXXXXXXXXXX
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1
S3_ENDPOINT_URL=https://s3.amazonaws.com
CDN_BASE_URL=https://d1234567890abc.cloudfront.net

# Application URLs
FRONTEND_URL=https://indostarnaturals.com
BACKEND_URL=https://api.indostarnaturals.com
ENVIRONMENT=production

# Monitoring
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/1234567
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_AUTH_ATTEMPTS=5
RATE_LIMIT_AUTH_WINDOW_MINUTES=15

# CORS Origins (comma-separated)
CORS_ORIGINS=https://indostarnaturals.com,https://www.indostarnaturals.com

# Security
ALLOWED_HOSTS=api.indostarnaturals.com,indostarnaturals.com
SECURE_SSL_REDIRECT=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Celery
CELERY_BROKER_URL=redis://:password@elasticache-endpoint:6379/0
CELERY_RESULT_BACKEND=redis://:password@elasticache-endpoint:6379/1
CELERY_TASK_ALWAYS_EAGER=false
